<h1> <%= @product.title %> Edit</h1>

<%= form_for :product, url: product_path(@product), method: :patch do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :body, size: "30x10" %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </p>

  <p>
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %>
  </p>

  <p>
    <%= f.submit "Edit this item", :class => 'button button-edit' %>
  </p>
<% end %>