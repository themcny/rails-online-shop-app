<h1> <%= @product.title %> Edit</h1>

<%= form_for :product, url: product_path(@product), method: :patch do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :placeholder => "#{display_error(:title)}" %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, size: "30x10", :placeholder => "#{display_error(:body)}" %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location, :placeholder => "#{display_error(:location)}" %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category, :placeholder => "#{display_error(:category)}" %>

  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price, :placeholder => "#{display_error(:price)}" %>
  </p>

  <p>
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity, :placeholder => "#{display_error(:quantity)}" %>
  </p>

  <p>
    <%= f.submit "Edit this item", :class => 'button button-edit' %>
  </p>
<% end %>
