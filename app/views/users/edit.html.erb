<h1> Update Yourself</h1>

<%= form_for :user, url: user_path(@user), method: :patch do |f| %>
  <p>
      <%= f.label :email %>
      <%= render_errors_conditionally(@user, :email) %>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :password %>
      <%= render_errors_conditionally(@user, :password) %>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.label :password_confirmation %>
      <%= render_errors_conditionally(@user, :password_confirmation) %>
      <%= f.password_field :password_confirmation %>
    </p>

    <p>
      <%= f.label :time_zone %>
      <%= select("timezone", "location", @timezone_array) %>
    </p>

    <p>
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
    </p>
  <p>
    <%= f.submit "Update Your Information", :class => 'button button-edit' %>
  </p>
<% end %>
